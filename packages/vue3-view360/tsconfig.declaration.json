  "compilerOptions": {
    "skipLibCheck": true,
    "removeComments": true,
    "declaration": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declarationDir": "declaration",
    "strict": false
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
